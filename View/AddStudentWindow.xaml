<Window x:Class="IS_31.View.AddStudentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        xmlns:local="clr-namespace:IS_31.View"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        MinHeight="150"
        MinWidth="400"
        Title="Добавление или редактирование студента" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBox
            Text="{Binding NewStudent.Name}"
            Margin="10"
            Style="{StaticResource TextBoxExtend}"
            hc:InfoElement.Title="Имя:"
            Grid.Row="0"
            x:Name="nameTextBox" />
        <TextBox
             Text="{Binding NewStudent.Course}"
            Margin="10"
            Style="{StaticResource TextBoxExtend}"
            hc:InfoElement.Title="Курс:"
            Grid.Row="1"
            x:Name="courseTextBox" />
        <TextBox
            Text="{Binding NewStudent.Age}"
            Margin="10"
            Style="{StaticResource TextBoxExtend}"
            hc:InfoElement.Title="Возраст:"
            Grid.Row="2"
            x:Name="ageTextBox" />

        <ComboBox
            SelectedItem="{Binding SelectedGroup}"
            ItemsSource="{Binding Groups}"
            hc:InfoElement.Title="Группа:"
            DisplayMemberPath="Name"
            Style="{StaticResource ComboBoxExtend}"
            Margin="10"
            Grid.Row="3"
            SelectedIndex="0"/>

        <Button x:Name="addButton"
                Height="30" 
                Padding="10,0"
                Margin="10"
                Grid.Row="4"
                Background="Black" 
                Foreground="White" 
                Content="Сохранить" 
                Style="{StaticResource ButtonCustom}" 
                hc:BackgroundSwitchElement.MouseHoverBackground="Red" 
                hc:BackgroundSwitchElement.MouseDownBackground="PaleVioletRed" Click="addButton_Click"/>

        <TextBlock
            Visibility="{Binding IsError}"
            Grid.Row="5"
            Foreground="Red"
            Margin="10"
            Text="{Binding Errors}">
        </TextBlock>
    </Grid>
</Window>
