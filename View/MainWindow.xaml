<Window x:Class="IS_31.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        xmlns:local="clr-namespace:IS_31"
        mc:Ignorable="d"
        MinHeight="200"
        MinWidth="400"
        WindowStartupLocation="CenterScreen"
        Title="Мастер по работе со студентами" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="200" />
        </Grid.ColumnDefinitions>
        <StackPanel 
            Width="600" 
            Margin="32"
            Grid.Column="0"
            VerticalAlignment="Center">
            <hc:LoadingLine Margin="0,30" Foreground="BlueViolet" Style="{StaticResource LoadingLineLarge}"/>
        </StackPanel>
        <DataGrid
            AutoGenerateColumns="False"
            Grid.Column="0"
            Visibility="{Binding IsLoad}"
            SelectedItem="{Binding SelectedStudent}"
            ItemsSource="{Binding Students}"
            Name="mainDg">
            <DataGrid.Columns>
                <DataGridTextColumn
            Binding="{Binding Name}"
            Header="ФИО">
                </DataGridTextColumn>
                <DataGridTextColumn
            Binding="{Binding Course}"
            Header="Курс">
                </DataGridTextColumn>
                <DataGridTextColumn
            Binding="{Binding Age}"
            Header="Возраст">
                </DataGridTextColumn>
                <DataGridTextColumn
            Binding="{Binding Path=Group.Name}"
            Header="Группа">
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>


        <Grid
            Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition Height="50" />
                <RowDefinition Height="50" />
            </Grid.RowDefinitions>
            <Button
                Name="addStudentBtn"
                Grid.Row="0"
                Content="Добавить студента" Click="addStudentBtn_Click"/>
            <Button
                Name="editStudentBtn"
                Grid.Row="1"
                Content="Редактировать студента" Click="editStudentBtn_Click" />
            <Button
                Name="deleteStudentBtn"
                Grid.Row="2"
                Style="{StaticResource ButtonDanger}"
                Content="Удалить студента" Click="deleteStudentBtn_Click" />

        </Grid>

    </Grid>
</Window>
